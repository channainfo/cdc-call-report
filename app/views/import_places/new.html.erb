<%= breadcrumb [ {"Health Structure" => places_path()}, {"Import Place" => nil}] %>
<div class="fuelux-wizard-container">
  <!-- #section:plugins/fuelux.wizard.steps -->
  <ul class="steps">
    <li data-step="1" class="active">
      <span class="step">1</span>
      <span class="title">Import Place</span>
    </li>

    <li data-step="2">
      <span class="step"><%= link_to "2", users_import_path() %></span>
      <span class="title">Import User</span>
    </li>
  </ul>

  <hr>

  <div class="col-sm-12 widget-container-col ui-sortable">
    <!-- #section:custom/widget-box.options.transparent -->
    <div class="widget-box transparent ui-sortable-handle">
      <div class="widget-header">
        <h4 class="widget-title strong">Import place</h4>

        <div class="widget-toolbar no-border">
          <a data-action="settings" href="#">
            <i class="ace-icon fa fa-cog"></i>
          </a>

          <a data-action="reload" href="#">
            <i class="ace-icon fa fa-refresh"></i>
          </a>

          <a data-action="collapse" href="#">
            <i class="ace-icon fa fa-chevron-up"></i>
          </a>

          <a data-action="close" href="#">
            <i class="ace-icon fa fa-times"></i>
          </a>
        </div>
      </div>

      <div class="widget-body">
        <div class="widget-main padding-6 no-padding-left no-padding-right">
          <p> This tool allows you to import a bunch of locations to your system by using a <%= link_to raw("location form"), places_template_path + ".csv", :method => :get, :class => 'bold_link', :format => :csv %> as a template. </p>
        </div>
      </div>
      <div class="widget-main">
        <div class="form-group">
          <div class="col-xs-6">
            <label class="ace-file-input">
              <form id="import-place" method="POST" target="uploadPlace" enctype="multipart/form-data">
                <input type="file" class="file-input" id="place-file-select"  name="files[]" >
              </form>
            </label>

            <iframe id="uploadPlace" name="uploadPlace" height="0" width="0" frameborder="0" scrolling="yes"></iframe>
          </div>
        </div>

      </div>
      <div class='hierarchy-list' id="hierarchy-place">

      </div>

      <button class="btn btn-success" id="btn-import-place" style="display:none;"> Confirm Import</button>

  </div>
</div>
