<%= breadcrumb [ {"SMS Log" => nil} ] %>
<div class="clearfix">
  <div class="pull-left">
    <h3 class="header-title">List of SMS log</h3>
  </div>
</div>

<div class="table-responsive">
  <table class="report table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>To</th>
        <th>Message</th>
        <th>Channel</th>
        <th>Type</th>
        <th>Created_at</th>
      </tr>
    </thead>
    <tbody>
      <% @logs.each do |log| %>
        <tr>
          <td><%= log.to %></td>
          <td><%= log.body %></td>
          <td><%= log.suggested_channel %></td>
          <td><%= log.type.try(:name).try(:camelcase) %></td>
          <td><%= log.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="clearfix">
  <%= paginate_for(@logs) %>
</div>
