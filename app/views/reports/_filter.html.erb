<div class='panel panel-default'>
  <div class='panel-heading'>
    <h3 class='panel-title'>Filter</h3>
  </div>

  <div class="panel-body" style='padding: 10px 0px;'>
    <%= form_tag reports_path, method: 'GET' do |f| %>

      <div class='input-row col-lg-2'>
        <%= label_tag :from %>
        <%= text_field_tag :from, params[:from], class: 'form-control date-picker', autocomplete: :off %>
      </div>

      <div class='input-row col-lg-2'>
        <%= label_tag :to %>
        <%= text_field_tag :to, params[:to], class: 'form-control date-picker', autocomplete: :off %>
      </div>

      <div class='input-row col-lg-2'>
        <%= label_tag :phd, 'PHD' %>
        <%= select_tag :phd, options_for_select(UserContext.new(current_user).phds_list, params[:phd]),
                       class: 'form-control', include_blank: 'All' %>
      </div>

      <div class='input-row col-lg-2'>
        <%= label_tag :od, 'OD' %>
        <%= select_tag :od, options_for_select(UserContext.new(current_user).ods_list(params[:phd]), params[:od]),
                       class: 'form-control', prompt: "All" %>
      </div>

      <div class='input-row col-lg-2'>
        <%= label_tag :reviewed, 'Reviewed Status' %>
        <%= select_tag :reviewed, options_for_select([[ "Reviewed", 1], ["New", 0]], params[:reviewed]),
                       class: 'form-control', include_blank: "All" %>
      </div>


      <div class='input-row col-lg-2'>
        <button class='btn btn-primary' style='margin-top: 25px;'>
          <i class='glyphicon glyphicon-search'> </i> Filter
        </button>
      </div>
    <% end %>
  </div>
</div>
