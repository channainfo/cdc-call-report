<!-- set up the modal to start hidden and fade in and out -->
<div id="hubModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- dialog body -->
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        Are you sure you want to submit report to CamEwarn?
      </div>
      <!-- dialog buttons -->

      <div class="modal-footer">
        <button id="hubOK" type="button" class="btn btn-primary">OK</button>
        <button id="hubCancel" type="button" class="btn btn-default">Cancel</button>
      </div>
    </div>
  </div>
</div>
