<%= breadcrumb [ {"Settings" => nil} ] %>

<%= render 'nav_bar' %>

<% 
  should_render = true
  
  partial_name = (!params[:tab].present? || params[:tab] === Setting::VERBOICE.to_s) ? 'verboice_connection' : params[:tab].to_s

  should_render = false if (params[:tab] === Setting::HUB.to_s) && !Setting.hub_enabled?
%>

<% if should_render %>
  <%= render partial_name %>
<% end %>
