<?xml version="1.0" encoding="UTF-8" ?>
<verboice-service>
  <name>Insurance Reminder</name>
  <global-settings>
    <variable name="service_domain" display-name="Service Domain" type="string"/>
  </global-settings>
  <steps>
    <step name="validate_hc_worker"
      display-name="HC Worker"
      icon="medicalkit"
      type="callback"
      callback-url="http://192.168.1.127:3000/steps/validate_hc_worker">

      <settings>
        <variable name="value" display-name="Variable" type="numeric"/>
      </settings>

      <response type="variables">
        <variable name="result" display-name="Result" type="string"/>
      </response>

    </step>

    <step name="sms_sender"
      display-name="SMS"
      icon="medicalkit"
      type="callback"
      callback-url="http://192.168.1.127:3000/steps/send_sms">
    </step>

  </steps>
</verboice-service>
